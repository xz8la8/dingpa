{
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "strictNullChecks": false,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "paths": {
      "@dingpa/shared": ["./packages/shared/src/index.ts"],
      "dingpa": ["./packages/dingpa/src/index.ts"],
      "@dingpa/app": ["./packages/app/src/index.ts"]
    },
  }
}
